            <p class="Logo-text" lang="ru">
                <span>Фронтенд</span>
                <span>сегодня</span>
            </p>

            <p class="Logo-text" lang="en">
                <span>Frontend</span>
                <span>today</span>
            </p>
        </a>
    </div>

    <div class="Header-theme">
        <div class="Switch-root">
            <button class="Switch-button">
                <svg class="Theme-settings" width="24" height="24" fill="var(--fg)">
                    <use xlink:href="#icon-svg-settings"></use>
                </svg>
            </button>
            <ul class="Switch-alert" role="group" aria-labelledby="themes-group-label">
                <li>
                    <label class="Switch-label" for="light">
                        <input class="Switch-input" id="light" type="radio" tabindex="0" name="themes" value="theme-light">
                        <span class="Switch-radio">
                            <span class="Switch-inputText">Дневной режим</span>
                            <span class="Switch-customRadio"></span>
                        </span>
                    </label>
                </li>
                <li>
                    <label class="Switch-label" fot="dark">
                        <input class="Switch-input" id="dark" type="radio" tabindex="0" name="themes" value="theme-dark">
                        <span class="Switch-radio">
                            <span class="Switch-inputText">Ночной режим</span>
                            <span class="Switch-customRadio"></span>
                        </span>
                    </label>
                </li>
                <li>
                    <label class="Switch-label" for="device">
                        <input class="Switch-input" id="device" type="radio" tabindex="0" name="themes" value="theme-device">
                        <span class="Switch-radio">
                            <span class="Switch-inputText">Системный</span>
                            <span class="Switch-customRadio"></span>
                        </span>
                    </label>
                </li>
            </ul>
        </div>
    </div>
</header>